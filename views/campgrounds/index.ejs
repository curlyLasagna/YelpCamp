<%- include('../partials/header') %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelp Camp</h1>
            <p>View our hand-picked campgrounds from all the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
            </p>
        </div>
    </header>
    <div class="row text-center">
        <% campgrounds.forEach((campground)=>{ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top " src="<%=campground.image%>" alt="">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                    </div>
                    <!-- Creates a random hex id for mongodb -->
                    <p><a href="/campgrounds/<%- campground._id %>" class="btn btn-primary">More Info</a></p>
                </div>
            </div>
        <%}) %>
    </div>
</div>
<%- include('../partials/footer')%>